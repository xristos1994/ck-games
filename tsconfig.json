{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "noEmit": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["@core/*"],
      "@core": ["@core/index.ts"],

      "@components/*": ["components/*"],
      "@components": ["components/index.ts"],

      "@models/*": ["models/*"],
      "@models": ["models/index.ts"],

      "@store/*": ["store/*"],
      "@store": ["store/index.ts"],

      "@utils/*": ["utils/*"],
      "@utils": ["utils/index.ts"],

      "@hooks/*": ["hooks/*"],
      "@hooks": ["hooks/index.ts"],

      "@page-components/*": ["page-components/*"],
      "@page-components": ["page-components/index.ts"],

      "@images/*": ["images/*"],
      "@images": ["images/index.ts"],

      "@sounds/*": ["sounds/*"],
      "@sounds": ["sounds/index.ts"],

      "@interfaces/*": ["interfaces/*"],
      "@interfaces": ["interfaces/index.ts"]
    }
  },
  "exclude": ["node_modules", "public", ".cache", "lazy_dev", "CK-Games-Dev_Helpers"]
}
